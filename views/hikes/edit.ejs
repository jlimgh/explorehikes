<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Edit <%= hike.name %> </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/hikingspots/<%= hike._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[name]" value="<%= hike.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[image]" value="<%= hike.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[description]" value="<%= hike.description %>">
                </div>                
                <div class="form-group">
                    <button class="btn btn-lrg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hikingspots">Go back</a>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>