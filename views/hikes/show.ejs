<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Hiking Spots</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= hike.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/Night</h4>
                    <h4><a><%= hike.name %></a></h4>
                    <p><%= hike.description%></p>
                    <p>
                        <em>Submitted by <%= hike.author.username %></em>
                    </p>
                    <% if(currentUser && hike.author.id.equals(currentUser._id)) { %>
                    <a class="btn btn-warning" href="/hikingspots/<%= hike._id %>/edit">Edit</a>
                    <form id="delete-form" action="/hikingspots/<%= hike._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/hikingspots/<%= hike._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% hike.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <a class="btn btn-xs btn-warning" href="/hikingspots/<%= hike._id %>/comments/<%= comment._id %>/edit">Edit</a>
                            <form class="delete-form" action="/hikingspots/<%= hike._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>



<% include ../partials/footer %>