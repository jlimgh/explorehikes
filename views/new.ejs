<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Create New Hiking Spot </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/hikingspots" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="hike name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>                
                <div class="form-group">
                    <button class="btn btn-lrg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hikingspots">Go back</a>
        </div>
        
    </div>
</div>
